<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/desc_and_asce_bkg"
    tools:context=".orderingNumber">

    <ImageView
        android:id="@+id/ordering_back"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/ordering_background"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
       />


    <TextView
        android:id="@+id/instructionsTextView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:textStyle="bold"
        android:text="Drag and drop the numbers to arrange them in ascending order:"
        android:textSize="18sp"
        android:textColor="@color/purple_700"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/ordering_back"/>


    <LinearLayout
        android:id="@+id/numbersLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/instructionsTextView"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/place_number1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="45dp"
            android:background="@drawable/number_background"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:longClickable="true"
            />
        <TextView
            android:id="@+id/place_number2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/number_background"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:longClickable="true"
            />
        <TextView
            android:id="@+id/place_number3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/number_background"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:longClickable="true"
           />
        <TextView
            android:id="@+id/place_number4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/number_background"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/white"
            android:longClickable="true"
            />
        <TextView
            android:id="@+id/place_number5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/number_background"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/white"
            android:longClickable="true"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/numbersLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/numbersLayout"
        android:orientation="horizontal">

        <Button
            android:id="@+id/result_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="result"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/next_question_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Next"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />


        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp" />

    </LinearLayout>



</RelativeLayout>